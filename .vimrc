" ---------------------------------------
"  Encode
" ---------------------------------------
set fileencodings=utf-8,euc-jp,cp932,sjis
set fileencoding=utf-8
set encoding=utf-8
set fileformats=unix,dos
scriptencoding utf-8

" ---------------------------------------
"  Tab
" ---------------------------------------
set expandtab
set tabstop=4
set softtabstop=4
set autoindent
set smartindent
set shiftwidth=4

" ---------------------------------------
"  Search
" ---------------------------------------
set incsearch
set ignorecase
set smartcase
set hlsearch

" ---------------------------------------
"  Cursor 
" ---------------------------------------
set whichwrap=b,s,h,l,<,>,[,],~
set number
set rnu
set cursorline
highlight CursorLine term=reverse ctermbg=8 guibg=Grey40
set cursorcolumn
set backspace=indent,eol,start
set showmatch

" ---------------------------------------
"  Command
" ---------------------------------------
set wildmenu
set history=5000

